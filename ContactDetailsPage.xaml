<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MauiContactApp.Views.ContactDetailsPage"
             Title="Contact Details">
    <StackLayout Padding="20">
        <Image Source="{Binding Photo}" WidthRequest="200" HeightRequest="200" />
        <Label Text="{Binding Name}" FontSize="24" FontAttributes="Bold" />
        <Label Text="{Binding Email}" FontSize="18" />
        <Label Text="{Binding PhoneNumber}" FontSize="18" />
        <Label Text="{Binding Description}" FontSize="16" />

        <VerticalStackLayout VerticalOptions="FillAndExpand"/>
        <Button Text="Back" Clicked="OnBackButtonClicked" VerticalOptions="End" HorizontalOptions="Fill" BackgroundColor="LightGray" />
    </StackLayout>
</ContentPage>
